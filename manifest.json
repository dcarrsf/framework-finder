{
  "manifest_version": 2,

  "name": "Unmask Plugin",
  "description": "This extension analyzes front-end technologies used on the page.",
  "version": "0.0",

  // "background": {
  //   "persistent": false,
  //   "scripts": ["background.js"]
  // },

  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["content.js"]
    }
  ],

  "browser_action": {
    "default_title": "Unmask",
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },

  "permissions": [
    "activeTab"
  ]
}